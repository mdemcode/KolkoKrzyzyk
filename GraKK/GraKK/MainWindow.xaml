<Window x:Class="GraKK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraKK"
        mc:Ignorable="d"
        Title="Circle - Cross" Height="450" Width="800">
    <Grid>
        <Grid Width="400" HorizontalAlignment="Left" Background="YellowGreen">
            <Grid Height="300" Width="300" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" Grid.Row="1" Margin="1" Background="LightGreen"/>
                <Label Grid.Column="0" Grid.Row="0" Margin="0,-1,1,1" Background="LightGreen"/>
                <Label Grid.Column="0" Grid.Row="1" Margin="0,1,1,1" Background="LightGreen"/>
                <Label Grid.Column="0" Grid.Row="2" Margin="0,1,1,0" Background="LightGreen"/>
                <Label Grid.Column="1" Grid.Row="0" Margin="1,-1,1,1" Background="LightGreen"/>
                <Label Grid.Column="1" Grid.Row="2" Margin="1,1,1,0" Background="LightGreen"/>
                <Label Grid.Column="2" Grid.Row="0" Margin="1,-1,0,1" Background="LightGreen"/>
                <Label Grid.Column="2" Grid.Row="1" Margin="1,1,0,1" Background="LightGreen"/>
                <Label Grid.Column="2" Grid.Row="2" Margin="1,1,0,0" Background="LightGreen"/>
            </Grid>
        </Grid>
        <Grid Width="400" HorizontalAlignment="Right" Background="Blue">

        </Grid>
    </Grid>

</Window>

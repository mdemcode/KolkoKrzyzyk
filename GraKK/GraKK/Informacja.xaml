<Window x:Name="OknoInformacji" x:Class="GraKK.Informacja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraKK"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="{x:Null}"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Height="150" Width="300">

    <Grid>
        <Image x:Name="tlo" Source="chmurka.png" MouseUp="Image_MouseUp"/>
        <Label x:Name="GrafikaInfo" MouseUp="Image_MouseUp" Content="Rozpoczyna Gracz 1" FontSize="18" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>

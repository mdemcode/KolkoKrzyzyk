<Window x:Class="GraKK.InputTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraKK"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Orange"
        FontFamily="Comic Sans Ms"
        mc:Ignorable="d"
        Title="InputTextBox" Height="120" Width="500">
    <Grid KeyUp="Grid_KeyUp">
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=WprowdzonyTekst}">
            <Label x:Name="TekstZachety" FontSize="18" HorizontalAlignment="Center">Podaj imię gracza</Label>
            <TextBox x:Name="WprowdzonyTekst" Focusable="True"  Height="40" Width="350" FontSize="20" FontWeight="Bold"></TextBox>
            <Button x:Name="OK" Margin="0,10,0,0" Width="100" FontSize="18" Click="OK_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>
